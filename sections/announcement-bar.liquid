{{ 'announcement-bar.css' | asset_url | stylesheet_tag }}

{% comment %} Annound Bar Section {% endcomment %}
<section class="announcement-bar section-{{ section.id }}" style="
  --ab-bg: {{ section.settings.bg_color }};
  --ab-text: {{ section.settings.text_color }};
  --ab-link: {{ section.settings.link_color }};
  --ab-font-size: {{ section.settings.font_size }}px;
  --ab-font-weight: {{ section.settings.font_weight }};
  --ab-text-align: {{ section.settings.text_align }};  
  --ab-padding-y: {{ section.settings.padding_y }}px;
  --ab-padding-x: {{ section.settings.padding_x }}px;
  --ab-radius: {{ section.settings.border_radius }}px;
  --ab-bar-max-width: {{ section.settings.bar_max_width }}px;
">
  <div
    class="announcement-bar__inner {% if section.settings.bar_full_width %}announcement-bar__inner--full {% else %}announcement-bar__inner--contained{% endif %}"
    role="region"
    aria-label="Announcement">
    {% if section.settings.text != blank %}
      {% if section.settings.link != blank %}
        <a class="announcement-bar__link" href="{{ section.settings.link }}">
          {{ section.settings.text | escape }}
        </a>
      {% else %}
        <p class="announcement-bar__text">
          {{ section.settings.text | escape }}
        </p>
      {% endif %}
    {% endif %}
  </div>
</section>

{% schema %}
  {
    "name": "Custom Announcement Bar",
    "settings": [
      {
        "type": "text",
        "id": "text",
        "label": "Text",
        "default": "Free shipping on orders over $50!"
      },
      {
        "type": "url",
        "id": "link",
        "label": "Optional link"
      },
      {
        "type": "header",
        "content": "Bar width (background)"
      },
      {
        "type": "checkbox",
        "id": "bar_full_width",
        "label": "Full width background",
        "default": true
      }, {
        "type": "range",
        "id": "bar_max_width",
        "label": "Background max width (px) when not full width",
        "min": 320,
        "max": 1600,
        "step": 20,
        "default": 1200
      }, {
        "type": "header",
        "content": "Colors"
      }, {
        "type": "color",
        "id": "bg_color",
        "label": "Background color",
        "default": "#C5B7F1"
      }, {
        "type": "color",
        "id": "text_color",
        "label": "Text color",
        "default": "#111111"
      }, {
        "type": "color",
        "id": "link_color",
        "label": "Link color",
        "default": "#111111"
      }, {
        "type": "header",
        "content": "Typography"
      }, {
        "type": "range",
        "id": "font_size",
        "label": "Font size (px)",
        "min": 12,
        "max": 24,
        "step": 1,
        "default": 14
      }, {
        "type": "select",
        "id": "font_weight",
        "label": "Font weight",
        "default": "600",
        "options": [
          {
            "value": "400",
            "label": "Normal"
          }, {
            "value": "600",
            "label": "Semi-bold"
          }, {
            "value": "700",
            "label": "Bold"
          }
        ]
      }, {
        "type": "select",
        "id": "text_align",
        "label": "Text alignment",
        "default": "center",
        "options": [
          {
            "value": "left",
            "label": "Left"
          }, {
            "value": "center",
            "label": "Center"
          }, {
            "value": "right",
            "label": "Right"
          }
        ]
      }, {
        "type": "header",
        "content": "Spacing & shape"
      }, {
        "type": "range",
        "id": "padding_y",
        "label": "Vertical padding (px)",
        "min": 4,
        "max": 30,
        "step": 1,
        "default": 10
      }, {
        "type": "range",
        "id": "padding_x",
        "label": "Horizontal padding (px)",
        "min": 8,
        "max": 50,
        "step": 1,
        "default": 16
      }, {
        "type": "range",
        "id": "border_radius",
        "label": "Border radius (px)",
        "min": 0,
        "max": 24,
        "step": 1,
        "default": 8
      }
    ],
    "presets": [
      {
        "name": "Custom Announcement Bar"
      }
    ]
  }

{% endschema %}