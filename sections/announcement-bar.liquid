{% comment %} Annound Bar Section {% endcomment %}
<section class="announcement-bar" style="
  --ab-bg: {{ section.settings.bg_color }};
  --ab-text: {{ section.settings.text_color }};
  --ab-link: {{ section.settings.link_color }};
  --ab-font-size: {{ section.settings.font_size }}px;
  --ab-font-weight: {{ section.settings.font_weight }};
  --ab-align: {{ section.settings.text_align }};  
  --ab-max-width: {% if section.settings.full_width %}none{% else %}{{ section.settings.max_width }}px{% endif %};
  --ab-pad-y: {{ section.settings.pading_y }}px;
  --ab-pad-x: {{ section.settings.pading_x }}px;
">
  <div class="announcement-bar__inner">
    {% if section.settings.link != blank %}
      <a class="announcement-bar__link" href="{{ section.settings.link }}">
        {{ section.settings.text | escape }}
      </a>
    {% else %}
      <p class="announcement-bar__text">{{ section.settings.text | escape }}</p>
    {% endif %}
  </div>
</section>

{% schema %}
  {
    "name": "Announcement Bar",
    "settings": [
      {
        "type": "text",
        "id": "text",
        "label": "Text",
        "default": "Free shippin on orders over $50!"
      },
      {
        "type": "url",
        "id": "link",
        "label": "Optional link"
      },
      {
        "type": "header",
        "content": "Colors"
      },
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background color",
        "default": "#fffae6"
      }, {
        "type": "color",
        "id": "text_color",
        "label": "Text color",
        "default": "#111111"
      }, {
        "type": "color",
        "id": "link_color",
        "label": "Link color",
        "defaule": "#111111"
      }, {
        "type": "header",
        "content": "Typography"
      }, {
        "type": "range",
        "id": "font_size",
        "label": "Font size (px)",
        "min": 12,
        "max": 24,
        "step": 1,
        "default": 14
      }, {
        "type": "select",
        "id": "font_weight",
        "label": "Font weight",
        "default": "600",
        "options": [
          {
            "value": "400",
            "label": "Normal"
          }, {
            "value": "600",
            "label": "Semi-bold"
          }, {
            "value": "700",
            "label": "Bold"
          }
        ]
      }, {
        "type": "select",
        "id": "text_align",
        "label": "Text alignment",
        "default": "center",
        "options": [
          {
            "value": "left",
            "label": "Left"
          }, {
            "value": "center",
            "label": "Center"
          }, {
            "value": "right",
            "label": "Right"
          }
        ]
      }, {
        "type": "header",
        "content": "Layout"
      }, {
        "type": "checkbox",
        "id": "full_width",
        "label": "Full width content (no max width)",
        "default": false
      }, {
        "type": "range",
        "id": "max_width",
        "label": "Content max width (px)",
        "min": 320,
        "max": 1600,
        "step": 20,
        "default": 1200
      }, {
        "type": "range",
        "id": "padding_y",
        "label": "Vertical padding (px)",
        "min": 4,
        "max": 30,
        "step": 1,
        "default": 8
      }, {
        "type": "range",
        "id": "padding_x",
        "label": "Horizontal padding (px)",
        "min": 8,
        "max": 50,
        "step": 1,
        "default": 16
      }
    ],
    "presets": [
      {
        "name": "Announcement Bar"
      }
    ]
  }

{% endschema %}