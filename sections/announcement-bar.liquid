{% comment %} Annound Bar Section {% endcomment %}
<section class="announcement-bar" style="background-color: {{ section.settings.bg_color }}">
  {% if section.settings.text != blank %}
    <p>{{ section.settings.text }}</p>
  {% endif %}

  {% if section.settings.link != blank %}
    <a href="{{ section.settings.link }}">Learn more</a>
  {% endif %}
</section>

{% schema %}
  {
    "name": "Announcement Bar",
    "settings": [
      {
        "type": "text",
        "id": "text",
        "label": "Text",
        "default": "Free shippin on orders over $50!"
      }, {
        "type": "url",
        "id": "link",
        "label": "Optional link"
      }, {
        "type": "color",
        "id": "bg_color",
        "label": "Background color",
        "default": "#fffae6"
      }
    ],
    "presets": [
      {
        "name": "Announcement Bar"
      }
    ]
  }

{% endschema %}